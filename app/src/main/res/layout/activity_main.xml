<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/top_bg"
        android:padding="40dp">

        <Button
            android:id="@+id/expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="20dp"
            android:text="Expense" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8A070707"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/ratingImage"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/rating"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhutan, Land of the Thunder Dragon"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The mystical realm of Bhutan, where love and spirituality dance in harmony, weaving a tapestry of enchantment and serenity."
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"/>

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/paroImage"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/paro" />

            <ImageView
                android:id="@+id/tmImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/tm"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:id="@+id/thimpuImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/thimpu"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:id="@+id/bhumtangImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/bhumtang"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/bookButton"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="40dp"
                android:text="Book Destination"
                android:textColor="#fff"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
